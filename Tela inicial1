<script> 
      $(document).ready(function() {
    $('.center-slider').slick({
        slidesToShow: 5,         // Quantos slides mostrar ao mesmo tempo
        slidesToScroll: 1,       // Quantos slides irão mover por vez
        centerMode: true,        // Ativa o modo centralizado
        arrows: true,            // Exibe as setas de navegação
        dots: false,             // Desativa os pontos de navegação
        speed: 300,              // Velocidade da transição
        centerPadding: '20px',   // Distância entre os slides centrais
        infinite: true,          // Habilita loop infinito
        autoplaySpeed: 5000,     // Velocidade do autoplay (5 segundos)
        autoplay: true           // Habilita autoplay
    });
});
</script> 
